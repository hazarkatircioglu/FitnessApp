@model IEnumerable<Order>

<section class="content mt-5">
    <div class="content-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Sipariş Listesi</h3>
                    </div>
                    <div class="card-body p-0 table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Ürün Adı</th>
                                    <th>Tutar</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Date.ToString("d")</td>
                                        <td>@item.Product.ProductTitle</td>
                                        <td>@item.Product.ProductPrice.ToString("0.00") ₺</td>
                                        <td>
                                            @if (item.Status==SatinAlmaDurumlari.ProgramBekleniyor)
                                            {
                                                <span class="badge badge-warning">@SatinAlmaDurumlari.ProgramBekleniyor</span>
                                            }
                                            else if (item.Status == SatinAlmaDurumlari.ProgramGonderildi)
                                            {
                                                <span class="badge badge-success">@SatinAlmaDurumlari.ProgramGonderildi</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == SatinAlmaDurumlari.ProgramBekleniyor)
                                            {
                                                <a class="btn btn-warning btn-xs" asp-action="Edit" asp-route-id="@item.Id">
                                                    Program Gönder
                                                </a>
                                            }else
                                            {
                                                <a class="btn btn-success btn-xs" asp-action="Edit" asp-route-id="@item.Id">
                                                    Programı Güncelle
                                                </a>
                                            }    
                                            <a class="btn btn-info btn-xs" asp-action="Detail" asp-route-id="@item?.Id">
                                                <i class="fa fa-book"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>