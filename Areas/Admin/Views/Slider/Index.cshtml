@model IEnumerable<Slider>

<section class="content mt-5">
    <div class="content-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info card-outline">
                    <div class="card-body">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-3 text-center mb-3">
                                    <a href="@item.Image" data-toggle="lightbox" data-title="@item.Title" data-gallery="gallery">
                                        <img src="@item.Image" class="img-fluid mb-2" alt="Galeri Resmi" style="height: 200px; width: 100%" />
                                    </a>
                                    <div class="modal fade" id="modal-danger-@item.Id">
                                        <div class="modal-dialog">
                                            <div class="modal-content bg-danger">
                                                <div class="modal-header">
                                                    <h3 class="modal-title">
                                                        Kaydı Sil
                                                    </h3>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Bu işlem geri alınamaz!</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal-danger-@item.Id">
                                        Sil
                                    </button>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>