@model IEnumerable<Slider>
<div class="slider-area">
    <div class="slider-activation owl-carousel without-dots">
        @foreach (var item in Model)
        {
            <div class="slide align-center-left animation-style-01 bg-image-27" style="background-image: url(@item.Image)">
                <div class="slider-progress"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="slider-content">
                                <h1>@item.Title</h1>
                                <div class="slide-btn makali-btn transparent-btn">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
