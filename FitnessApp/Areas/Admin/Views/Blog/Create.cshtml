@model Blog

<section class="content mt-5">
    <div class="content-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Blog Ekle</h3>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Blog Başlığı*</label>
                                        <input asp-for="BlogTitle" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Blog Yazısı*</label>
                                        <textarea asp-for="BlogText" id="summernote"></textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                        <div class="card-footer clearfix">
                            <a class="btn btn-warning btn-sm float-right" asp-action="Index">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
