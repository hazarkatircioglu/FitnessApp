@model LoginVM
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Giriş</li>
        </ol>
    </div>
</div>
<div class="login ptb-90">
    <div class="container">
        <h3 class="login-header text-center">Hesabınıza giriş yapın</h3>
        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="login-form">
                    <form method="post">
                        <div class="form-group row mb-20">
                            <label for="email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-7">
                                <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row mb-20">
                            <label for="inputPassword" class="col-sm-3 col-form-label">Parola</label>
                            <div class="col-sm-7">
                                <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Parola">
                            </div>
                        </div>
                        <div class="login-details text-center mb-25">
                         @*    <a href="forgot-password.html">Forgot your password? </a> *@
                            <button type="submit" class="login-btn">Giriş Yap</button>
                        </div>
                        <div class="login-footer text-center">
                            <p><a asp-action="Register">Henüz bir hesabınız yok mu?</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 