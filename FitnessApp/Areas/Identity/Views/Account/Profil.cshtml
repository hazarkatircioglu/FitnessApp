@model IEnumerable<Order>


<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Profil</li>
        </ol>
    </div>
</div>
<div class="my-account white-bg ptb-90">
    <div class="container">
        <div class="account-dashboard">
            <div class="row">
                <div class="col-lg-2">
                    <ul class="nav flex-column dashboard-list">
                        <li><a class="nav-link active" asp-action="Profil">Siparişlerim</a></li>
                        <li><a class="nav-link" asp-action="Logout">Çıkış</a></li>
                    </ul>
                </div>
                <div class="col-lg-10">
                    <div class="dashboard-content mt-all-40">
                        <div id="orders">
                            <h3>Siparişlerim</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Ürün Adı</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Date.ToString("d")</td>
                                                <td>@item.Product.ProductTitle</td>
                                                <td>@item.Product.ProductPrice.ToString("0.00") ₺</td>
                                                <td>
                                                    @if (item.Status == SatinAlmaDurumlari.ProgramBekleniyor)
                                                    {
                                                        <span class="text-warning">@SatinAlmaDurumlari.ProgramBekleniyor</span>
                                                    }
                                                    else if (item.Status == SatinAlmaDurumlari.ProgramGonderildi)
                                                    {
                                                        <span class="text-success">@SatinAlmaDurumlari.ProgramGonderildi</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="view" asp-action="OrderDetail" asp-route-id="@item.Id">Detay</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>