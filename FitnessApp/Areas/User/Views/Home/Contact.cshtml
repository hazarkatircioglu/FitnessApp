<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">İletişim</li>
        </ol>
    </div>
</div>
<div class="register-area white-bg ptb-90">
    <div class="container">
        <h3 class="login-header">Bize Ulaşın</h3>
        <div class="row">
            <div class="col-xl-12">
                <div class="register-contact  clearfix">
                    <form class="contact-form" asp-action="Contact" method="post">
                        <div class="address-wrapper row">
                            <div class="col-md-12">
                                <div class="address-fname">
                                    <input class="form-control" type="text" name="NameSurname" placeholder="Ad Soyad" required maxlength="60" pattern="[a-zA-ZiüöşğıoçİÜÖŞĞIOÇ ]*" oninput="this.reportValidity()" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="address-email">
                                    <input class="form-control" type="email" name="Email" placeholder="Email" required maxlength="64" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="address-subject">
                                    <input class="form-control" type="text" name="Subject" placeholder="Konu" required maxlength="30" pattern="[a-zA-ZiüöşğıoçİÜÖŞĞIOÇ ]*" oninput="this.reportValidity()" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="address-textarea">
                                    <textarea name="Message" class="form-control" placeholder="Mesajınız..." required maxlength="1000"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="footer-content mail-content clearfix">
                            <div class="send-email float-md-right">
                                <input value="Gönder" class="return-customer-btn" type="submit">
                            </div>
                        </div>
                        <p class="form-message"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>