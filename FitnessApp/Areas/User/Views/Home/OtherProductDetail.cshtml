@model OtherProduct

<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">@Model.ProductTitle</li>
        </ol>
    </div>
</div>
<div class="main-product-thumbnail white-bg ptb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="thubnail-desc fix">
                    <h3 class="product-header">@Model.ProductTitle</h3>
                    <div class="pro-thumb-price mt-10">
                        <p class="d-flex align-items-center">
                            <span class="price">@Model.ProductPrice.ToString("0.00") ₺</span>
                        </p>
                    </div>
                    <p>
                        @if (Model.ProductDescription != null)
                        {
                            @Html.Raw(Model.ProductDescription)
                        }
                    </p>
                    <br />
                    <div class="quatity-stock">
                        <ul class="d-flex flex-wrap  align-items-center">
                            <li>
                                <a class="pro-cart" asp-action="CheckOut" asp-route-productId="@Model.Id">Satın Al</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>